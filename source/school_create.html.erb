---
title: Crear Escuela
domain_singular: Escuela
breadcrumb:
  - name: Administrar Escuelas
    link: "/school_mgmt"
form:
  - label: Nombre
    type: text
    col_size: xl
    placeholder: Nombre completo de la Escuela
  - label: Email del Administrador
    type: text
    col_size: md
    placeholder: example@mail.com
---
<%= partial 'partials/page_heading' %>
<%= partial 'partials/page_action_head' %>

<% current_page.data.form.each do |form_element| %>
  <div class="form-group">
    <label><%= form_element.label %></label>
    <input type="email" placeholder="<%= form_element.placeholder %>" class="form-control">
    <% if form_element.help %>
      <span class="help-block m-b-none"><%= form_element.help %></span>
    <% end %>
  </div>
<% end %>

