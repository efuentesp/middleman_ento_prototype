---
title: Administrar Docentes
domain_singular: Docente
domain_plural: Docentes
domain_url: teacher
breadcrumb:
  - name: Administrar Escuelas
    link: "/school_mgmt"
  - name: Administrar Niveles Escolares
    link: "/school_level_mgmt"
---
<%= partial 'partials/page_heading' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5><%= data.i18n.domain_mgmt_list %> <%= current_page.data.domain_plural %></h5>
          <div class="ibox-tools">
            <% link_to '', :id => 'create-button', :class => 'btn btn-primary' do %>
              <i class="fa fa-plus-circle"></i> <%= "#{data.i18n.domain_mgmt_create} #{current_page.data.domain_singular}" %>
            <% end %>
          </div>
        </div>
        <div class="ibox-content">
          <div class="m-b-lg">
            <div class="input-group">
                <input type="text" id="search-box" placeholder="<%= data.i18n.domain_mgmt_search %> <%= current_page.data.domain_singular %>" class=" form-control">
                <span class="input-group-btn">
                <button type="button" id="search-button" class="btn btn-info"><i class="fa fa-search"></i></button>
            </span>
            </div>
            <div class="m-t-md">
              <div class="pull-right">
              </div>
              <small><%= data.schools.schools[0].school_levels[0].teachers.count %> <%= data.i18n.domain_mgmt_page_found %></small>
            </div>
          </div>
          <div class="project-list">
            <table class="table table-hover">
              <tbody>
                <% data.schools.schools[0].school_levels[0].teachers.each_with_index do |teacher, index| %>
                  <tr>
                    <td class="project-title">
                      <%= data.schools.schools[0].name %>
                    </td>
                    <td class="project-title">
                      <%= data.schools.schools[0].school_levels[0].name %>
                    </td>
                    <td class="project-title">
                      <%= teacher.name %>
                    </td>
                    <td class="project-actions">
                      <% if current_page.data.domain_children %>
                        <% current_page.data.domain_children.each do |child| %>
                          <% link_to child.link, :id => child.id+'_button_'+(index+1).to_s, :class => 'btn btn-outline btn-primary btn-sm' do %>
                            <i class="<%= child.icon %>"></i> <%= child.name %>
                          <% end %>
                        <% end %>
                      <% end %>
                      <% link_to '/'+current_page.data.domain_url+'_edit', :id => 'edit_button_'+(index+1).to_s, :class => 'btn btn-outline btn-default btn-sm' do %>
                        <i class="fa fa-pencil"></i> <%= data.i18n.domain_mgmt_edit %>
                      <% end %>
                      <% link_to '/'+current_page.data.domain_url+'_delete', :id => 'delete_button_'+(index+1).to_s, :class => 'btn btn-outline btn-default btn-sm' do %>
                        <i class="fa fa-trash"></i> <%= data.i18n.domain_mgmt_delete %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= partial 'partials/pager' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
