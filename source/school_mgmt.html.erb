---
<%= partial 'partials/page_heading' %>

<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5><%= data.i18n.domain_mgmt_list %> <%= current_page.data.domain_plural %></h5>
          <div class="ibox-tools">
            <% link_to '', :id => 'create-button', :class => 'btn btn-primary' do %>
              <i class="fa fa-plus-circle"></i> <%= "#{data.i18n.domain_mgmt_create} #{current_page.data.domain_singular}" %>
            <% end %>
          </div>
        </div>
        <div class="ibox-content">
          <div class="m-b-lg">
            <div class="input-group">
                <input type="text" id="search-box" placeholder="<%= data.i18n.domain_mgmt_search %> <%= current_page.data.domain_singular %>" class=" form-control">
                <span class="input-group-btn">
                <button type="button" id="search-button" class="btn btn-info"><i class="fa fa-search"></i></button>
            </span>
            </div>
            <div class="m-t-md">
              <div class="pull-right">
              </div>
              <small><%= data.schools.schools.count %> <%= data.i18n.domain_mgmt_page_found %></small>
            </div>
          </div>
          <div class="project-list">
            <table class="table table-hover">
              <tbody>
                <% data.schools.schools.each_with_index do |school, index| %>
                  <tr>
                    <td class="project-title">
                      <%= school.name %>
                    </td>
                    <td class="project-actions">
                      <% link_to '/school_edit', :id => 'edit_button_'+(index+1).to_s, :class => 'btn btn-white btn-sm' do %>
                        <i class="fa fa-pencil"></i> <%= data.i18n.domain_mgmt_edit %>
                      <% end %>
                      <% link_to '/school_delete', :id => 'delete_button_'+(index+1).to_s, :class => 'btn btn-white btn-sm' do %>
                        <i class="fa fa-trash"></i> <%= data.i18n.domain_mgmt_delete %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= partial 'partials/pager' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
