---
title: Administrar Evaluadores
domain_singular: Evaluador
domain_plural: Evaluadores
domain_url: assessor
---
<%= partial 'partials/page_heading' %>
<%= partial 'partials/page_search_head' %>

<table class="table table-hover">
  <tbody>
    <% data.schools.assessors.each_with_index do |assessor, index| %>
      <tr>
        <td class="project-title">
          <%= assessor.fullname %>
        </td>
        <td class="project-actions">
          <% if current_page.data.domain_children %>
            <% current_page.data.domain_children.each do |child| %>
              <% link_to child.link, :id => child.id+'_button_'+(index+1).to_s, :class => 'btn btn-outline btn-primary btn-sm' do %>
                <i class="<%= child.icon %>"></i> <%= child.name %>
              <% end %>
            <% end %>
          <% end %>
          <% link_to '/'+current_page.data.domain_url+'_edit', :id => 'edit_button_'+(index+1).to_s, :class => 'btn btn-outline btn-default btn-sm' do %>
            <i class="fa fa-pencil"></i> <%= data.i18n.domain_mgmt_edit %>
          <% end %>
          <% link_to '/'+current_page.data.domain_url+'_delete', :id => 'delete_button_'+(index+1).to_s, :class => 'btn btn-outline btn-default btn-sm' do %>
            <i class="fa fa-trash"></i> <%= data.i18n.domain_mgmt_delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= partial 'partials/pager' %>
<%= partial 'partials/page_search_foot' %>
